{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"], //dom usar junto com o check pq assim reconhece propriedades como WEATHERAPI, INNERTEXT E ETC
    "allowJs": true, //processamento js como se fosse typescript
    "checkJs": true, //typescript analisa arquivos .js 
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "windows/**/*"],
  "exclude": ["node_modules", "dist"]
}